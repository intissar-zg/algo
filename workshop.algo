            nbw=nbw+1;
        else IF (str[i] in ("a","e","i","o","u","y")) THEN
            nbv=nbv+1
        END_IF
    END_FOR
    write("nombre de caract√®res est," nbc)
    write("nombre de mots est," nbw)
    write("nombre de voyelle est," nbv)
END